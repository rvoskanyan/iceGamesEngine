<form action="/admin/series/{{seriesId}}/addGame" method="post">
    <label>
        Выберите игру:
        <select name="gameId">
            {{#each games}}
                <option value="{{id}}">
                    {{name}}
                </option>
            {{/each}}
        </select>
    </label>
    <br>
    <br>
    <input type="submit" name="add" value="Добавить">
</form>