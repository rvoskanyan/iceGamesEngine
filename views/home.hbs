<main>
    {{#if checkedEmail}}
        <div class="modalMessage js-modalMessage">E-mail успешно подтвержден! ✔</div>
    {{/if}}
    <div class="homeSlider js-homeSlider">
        <div class="tape js-tapeSlider">
            {{#each sliderProducts}}
                <div class="cover blackout blackout-left blackout-bottom slide{{#if @first}} active{{/if}} js-slide" data-video-name="{{coverVideo}}">
                    <video class="video" muted></video>
                    <img class="img" src="{{@root.websiteAddress}}{{coverImg}}" alt="Постер игры {{name}}" title="Постер игры {{name}}">
                    <div class="offer">
                        <div class="name">
                            {{name}}
                        </div>
                        <div class="description">
                            {{encodeString description}}
                        </div>
                        <div class="price">
                            {{#iff discount '>' 0}}
                                <div class="rowDiscount">
                                    <div class="fromPrice">
                                        <span class="value">{{priceFrom}}</span>
                                    </div>
                                    <div class="discount">{{discount}}</div>
                                </div>
                            {{/iff}}
                            <div class="toPrice">
                                <span class="value">{{priceTo}}</span>
                            </div>
                        </div>
                        <div class="actions">
                            {{#if inCart}}
                                <button
                                    title="Перейти в корзину покупок"
                                    class="btn elongated rounded increase bg-pink hover-backlight-blue  js-addToCart js-active"
                                >Добавлено</button>
                            {{else}}
                                <button
                                    title="Добавить товар в корзину покупок"
                                    class="btn elongated rounded increase bg-pink hover-backlight-blue js-addToCart"
                                    data-product-id="{{_id}}"
                                >
                                    В корзину
                                </button>
                            {{/if}}
                            <a href="/games/{{alias}}" title="Перейти к странице товара" class="btn elongated rounded translucent bg-pink">Подробнее</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="contentContainer navigate">
            <div class="slideControls">
                <button class="btn prev js-prevBtn"></button>
                <div class="progress js-progress"></div>
                <button class="btn next js-nextBtn"></button>
            </div>
            <div class="items mobileScroll js-navigateItemsContainer">
                {{#each sliderProducts}}
                    <button class="cardGame big{{#if @first}} active{{/if}} js-itemNavigate" title="Переключить слайд">
                        <div class="head">
                            <img class="img" src="{{@root.websiteAddress}}{{img}}" alt="Изображение игры {{name}}" title="{{name}}">
                            <div class="name">
                                {{name}}
                            </div>
                        </div>
                        <div class="price">
                            <div class="toPrice">
                                <span class="value">{{priceTo}}</span>
                            </div>
                            {{#iff priceTo '<' priceFrom}}
                                <div class="fromPrice">
                                    <span class="value">{{priceFrom}}</span>
                                </div>
                            {{/iff}}
                        </div>
                    </button>
                {{/each}}
            </div>
        </div>
    </div>
