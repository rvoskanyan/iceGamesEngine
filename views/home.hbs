                    {{#each partners}}
                        <a href="{{link}}" target="_blank" rel="nofollow" class="slide js-slide" title="Логотип {{name}}">
                            <img class="img" src="{{websiteAddress}}{{img}}" alt="Логотип {{name}}" title="Логотип {{name}}">
