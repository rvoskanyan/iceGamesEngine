        <div class="homeSection homeCatalog js-homeCatalogTabs">
            <div class="categories mobileInvisibleScroll">
                {{#each catalog}}
                    {{#iff products.length '>' 0}}
                        <button class="btn round border big bg-darkLilac translucent js-tabBtn{{#if @first}} active{{/if}}" data-target-id="{{@index}}">
                            {{category.name}}
                        </button>
                    {{/iff}}
                {{/each}}
            </div>
            <div class="blocks">
                {{#each catalog}}
                    {{#iff products.length '>' 0}}
                        <div class="item mobileScroll js-tabBlock-{{@index}}{{#if @first}} active{{/if}}">
                            {{#each products}}
                                {{> game
                                    id=_id
                                    size='big'
                                }}
                            {{/each}}
                        </div>
                    {{/iff}}
                {{/each}}
            </div>
            <a
                    href="/games"
                    class="more btn border rounded big increase translucent bg-darkLilac"
                    title="Открыть каталог со всеми товарами"
            >
                В каталог
            </a>
        </div>
        <div class="homeSection">
            <div class="homeTitle">Жанры</div>
            <div class="genresSlider js-genresSlider">
                <div class="visibleArea js-visibleArea">
                    <div class="slides js-tape">
                        <div class="slide js-slide">
                            {{#each genres}}
                                <a class="genre" href="{{websiteAddress}}games?genres={{_id}}" title="Открыть игры с жанром {{name}}">
                                    <span class="blackout" style="background-color: {{bgColor}}"></span>
                                    <img class="img" src="{{@root.websiteAddress}}{{img}}" alt="Изображение жанра {{name}}" title="Изображение жанра {{name}}">
                                    <div class="name">
                                        {{name}}
                                    </div>
                                </a>
                                {{#if (endOfBlock @index 2 @last)}}
                                    </div>
                                    <div class="slide js-slide">
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class="slideControls vertical">
                    <button class="btn prev js-prevBtn"></button>
                    <div class="progress js-progress"></div>
                    <button class="btn next js-nextBtn"></button>
                </div>
            </div>
        </div>
        {{> newsSlider
                aricles=articles
        }}
        <div class="homeSection">
            <div class="homeTitle">Медиа о нас</div>
            <div class="homeMediaSlider js-homeMediaSlider">
                <div class="tape js-tape">
                    {{#each partners}}
                        <a href="{{link}}" rel="nofollow" class="slide" title="Логотип {{name}}">
                            <img class="img" src="{{websiteAddress}}{{img}}" alt="Логотип {{name}}" title="Логотип {{name}}">
                        </a>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</main>