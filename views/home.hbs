<main>
    <div class="homeSlider js-homeSlider">
        <div class="tape js-tapeSlider">
            {{#each sliderProducts}}
                <div class="cover blackout blackout-left blackout-bottom slide{{#if @first}} active{{/if}} js-slide" data-video-name="{{coverVideo}}">
                    <video class="video" muted></video>
                    <img class="img" src="{{@root.websiteAddress}}{{coverImg}}" alt="Постер игры {{name}}" title="Постер игры {{name}}">
                    <div class="offer">
                        <div class="name">
                            {{name}}
                        </div>
                        <div class="description">
                            {{description}}
                        </div>
                        <div class="price">
                            <div class="toPrice">
                                <span class="value">
                                    {{priceTo}}
                                </span>
                            </div>
                            <div class="fromPrice">
                                <span class="value">
                                    {{priceFrom}}
                                </span>
                            </div>
                            <div class="discount">
                                {{discount}}
                            </div>
                        </div>
                        <div class="actions">
                            <button title="Добавить товар в корзину покупок" class="btn rounded increase bg-pink hover-backlight-blue">В корзину</button>
                            <a href="/games/{{alias}}" title="Перейти к странице товара" class="btn rounded translucent bg-pink">Подробнее</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="contentContainer navigate">
            <div class="slideControls">
                <button class="btn prev js-prevBtn"></button>
                <div class="progress js-progress"></div>
                <button class="btn next js-nextBtn"></button>
            </div>
            <div class="items gameGrid">
                {{#each sliderProducts}}
                    <button class="cardGame big{{#if @first}} active{{/if}} js-itemNavigate" title="Переключить слайд">
                        <div class="head">
                            <img class="img" src="{{@root.websiteAddress}}{{img}}" alt="Изображение игры {{name}}" title="{{name}}">
                            <div class="name">
                                {{name}}
                            </div>
                        </div>
                        <div class="price">
                            <div class="toPrice">
                                <span class="value">
                                    {{priceTo}}
                                </span>
                            </div>
                            <div class="fromPrice">
                                <span class="value">
                                    {{priceFrom}}
                                </span>
                            </div>
                        </div>
                    </button>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="contentContainer">
        <div class="homeSection row">
            {{#each usp}}
                <div class="uspBlock">{{text}}</div>
            {{/each}}
        </div>
        <div class="homeSection homeCatalog js-homeCatalogTabs">
            <div class="categories">
                {{#each catalog}}
                    <button class="btn round border big bg-darkLilac translucent js-tabBtn{{#if @first}} active{{/if}}" data-target-id="{{category._id}}">
                        {{category.name}}
                    </button>
                {{/each}}
            </div>
            <div class="blocks">
                {{#each catalog}}
                    <div class="item js-tabBlock-{{category._id}}{{#if @first}} active{{/if}}">
                        <div class="gameGrid">
                            {{#each products}}
                                <a href="/games/{{alias}}" class="cardGame big js-itemNavSlider" title="Перейти к странице игры">
                                    <div class="actions">
                                        <button class="btn like" title="Добавить игру в избранное">
                                            <span class="icon-static icon-static-actionLike"></span>
                                        </button>
                                        <button
                                                class="btn border rounded uppercase bg-darkPink hover-bg-pink inCart"
                                                title="Добавить данный товар в корзину покупок"
                                        >
                                            В корзину
                                        </button>
                                    </div>
                                    <div class="head">
                                        <img class="img" src="{{@root.websiteAddress}}{{img}}" alt="Изображение игры {{name}}" title="{{name}}">
                                        <div class="name">
                                            {{name}}
                                        </div>
                                    </div>
                                    <div class="price">
                                        <div class="toPrice">
                                            <span class="value">
                                                {{priceTo}}
                                            </span>
                                        </div>
                                        <div class="fromPrice">
                                            <span class="value">
                                                {{priceTo}}
                                            </span>
                                        </div>
                                    </div>
                                </a>
                            {{/each}}
                        </div>
                    </div>
                {{/each}}
            </div>
            <a
                    href="/games"
                    class="more btn border rounded big increase translucent bg-darkLilac"
                    title="Открыть каталог со всеми товарами"
            >
                В каталог
            </a>
        </div>
        <div class="homeSection">
            <div class="homeTitle">Жанры</div>
            <div class="genresSlider js-genresSlider">
                <div class="visibleArea js-visibleArea">
                    <div class="slides js-tape">
                        <div class="slide js-slide active">
                            {{#each genres}}
                                <a class="genre" href="{{websiteAddress}}{{url}}" title="Открыть игры с жанром {{name}}">
                                    <img class="img" src="{{@root.websiteAddress}}{{img}}" alt="Изображение жанра {{name}}" title="Изображение жанра {{name}}">
                                    <div class="name">
                                        {{name}}
                                    </div>
                                </a>
                                {{#if (endOfBlock @index 2 @last)}}
                                    </div>
                                    <div class="slide js-slide{{#if (isLess @index 3)}} active{{/if}}">
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class="slideControls vertical">
                    <button class="btn prev js-prevBtn"></button>
                    <div class="progress js-progress"></div>
                    <button class="btn next js-nextBtn"></button>
                </div>
            </div>
        </div>
        <div class="homeSection">
            <div class="homeTitle">Новости и статьи</div>
            <div class="newsSlider js-newsSlider">
                <button class="btn prev increase js-prevBtn">
                    <span class="icon-static icon-static-arrow"></span>
                </button>
                <div class="visibleArea js-visibleArea">
                    <div class="tape js-tape">
                        {{#each articles}}
                            <a href="{{websiteAddress}}blog/{{alias}}" class="newsPreview js-slide{{#iff @index '<' 3}} active{{/iff}}">
                                <img class="img" src="{{websiteAddress}}{{img}}" alt="Изображение записи из блога {{name}}" title="Изображение записи из блога {{name}}">
                                <div class="attributes">
                                    <div class="btn small round border small bg-darkLilac">
                                        {{#iff type '===' 'news'}}Новости{{else}}Статьи{{/iff}}
                                    </div>
                                    <div class="date">12.01.21</div>
                                </div>
                                <div class="description">
                                    <div class="title">
                                        {{name}}
                                    </div>
                                    <div class="text">
                                        {{introText}}
                                    </div>
                                </div>
                            </a>
                        {{/each}}
                    </div>
                </div>
                <button class="btn next increase js-nextBtn">
                    <span class="icon-static icon-static-arrow"></span>
                </button>
            </div>
            <a class="btn round border backlight-pink hover-bg-palePink all" href="{{websiteAddress}}blog">Все новости</a>
        </div>
        <div class="homeSection">
            <div class="homeTitle">Медиа о нас</div>
            <div class="homeMediaSlider js-homeMediaSlider">
                <div class="tape js-tape">
                    <a href="#" rel="nofollow" class="slide" title="Медиа о нас 1">
                        <img class="img" src="{{websiteAddress}}img/homeMedia-1.png" alt="Медиа о нас 1" title="Медиа о нас 1">
                    </a>
                    <a href="#" rel="nofollow" class="slide" title="Медиа о нас 2">
                        <img class="img" src="{{websiteAddress}}img/homeMedia-2.png" alt="Медиа о нас 2" title="Медиа о нас 2">
                    </a>
                    <a href="#" rel="nofollow" class="slide" title="Медиа о нас 3">
                        <img class="img" src="{{websiteAddress}}img/homeMedia-3.png" alt="Медиа о нас 3" title="Медиа о нас 3">
                    </a>
                    <a href="#" rel="nofollow" class="slide" title="Медиа о нас 4">
                        <img class="img" src="{{websiteAddress}}img/homeMedia-4.png" alt="Медиа о нас 4" title="Медиа о нас 4">
                    </a>
                    <a href="#" rel="nofollow" class="slide" title="Медиа о нас 1">
                        <img class="img" src="{{websiteAddress}}img/homeMedia-1.png" alt="Медиа о нас 1" title="Медиа о нас 1">
                    </a>
                    <a href="#" rel="nofollow" class="slide" title="Медиа о нас 2">
                        <img class="img" src="{{websiteAddress}}img/homeMedia-2.png" alt="Медиа о нас 2" title="Медиа о нас 2">
                    </a>
                    <a href="#" rel="nofollow" class="slide" title="Медиа о нас 3">
                        <img class="img" src="{{websiteAddress}}img/homeMedia-3.png" alt="Медиа о нас 3" title="Медиа о нас 3">
                    </a>
                    <a href="#" rel="nofollow" class="slide" title="Медиа о нас 4">
                        <img class="img" src="{{websiteAddress}}img/homeMedia-4.png" alt="Медиа о нас 4" title="Медиа о нас 4">
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>