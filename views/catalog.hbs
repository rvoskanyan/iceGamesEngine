<main class="contentContainer withoutCover catalog js-catalog">
    <div class="breadcrumbs contentContainer">
        <div class="item">
            <a class="btn link" href="#">Главная</a>
        </div>
        <div class="current">Каталог</div>
    </div>
    <div class="filters js-filter">
        <div class="priceBlock">
            <div class="title">Цена:</div>
            <div class="range">
                <div class="min" contenteditable>0</div>
                <div class="max" contenteditable>3500</div>
            </div>
        </div>
        <div class="variantsBlock">
            <div class="block">
                <div class="title">Категория:</div>
                <div class="variants">
                    {{#each categories}}
                        {{> checkbox
                            value=id
                            label=name
                            name='categories'
                        }}
                    {{/each}}
                </div>
            </div>
            <div class="block genres">
                <div class="title">Жанр:</div>
                <div class="variants">
                    {{#each genres}}
                        {{> checkbox
                            value=id
                            label=name
                            name='genres'
                        }}
                    {{/each}}
                </div>
            </div>
            <div class="block">
                <div class="title">Активация:</div>
                <div class="variants">
                    {{#each activationServices}}
                        {{> checkbox
                            value=id
                            label=name
                            name='activationServices'
                        }}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <div class="list">
        <div class="sort js-sort">
            <div class="title">Сортировать по:</div>
            <div class="variants">
                <button class="btn small rounded bg-lilac translucent">Дате выхода</button>
                <button class="btn small rounded bg-lilac translucent">Цене</button>
                <button class="btn small rounded bg-lilac translucent">Скидке</button>
                <label class="checkbox inStockOnly">
                    <input class="input" type="checkbox" name="onlyStock" value="1">
                    <span class="label">Только в наличии</span>
                </label>
            </div>
        </div>
        <div class="gameGrid">
            {{#each games}}
                {{> game
                        size=''
                        websiteAddress=../websiteAddress
                        id=id
                        img=img
                        name=name
                        priceTo=priceTo
                        priceFrom=priceFrom
                }}
            {{/each}}
        </div>
        <button class="btn rounded bg-lilac translucent loadMore js-loadMore">Загрузить ещё</button>
    </div>
</main>