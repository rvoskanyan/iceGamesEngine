{{#if isEdit}}
    <a href="/admin/products/{{game.id}}/addElement">Добавить элемент</a>
    {{#if gameElements}}
        <br>
        <br>
        Список элементов игры:
        <ul>
            {{#each gameElements}}
                <li>
                    <a href="/admin/products/{{../game.id}}/{{id}}">
                        {{name}}
                    </a>
                    {{#if gameId}}
                        --- <a href="/admin/products/edit/{{gameId}}">Перейти к игре</a>
                    {{else}}
                        {{#if description}}
                            <p>
                                {{description}}
                            </p>
                        {{/if}}
                    {{/if}}
                    <br>
                    <br>
                </li>
            {{/each}}
        </ul>
    {{/if}}
    <br>
    <br>
{{/if}}
<form method="post" action="/admin/products/{{#if isEdit}}edit/{{game.id}}{{else}}add{{/if}}" enctype="multipart/form-data">
    <label>
        Название:
        <input type="text" name="name" value="{{game.name}}">
    </label>
    <br>
    <br>
    <label>
        Описание:
        <textarea name="description" cols="30" rows="10">{{game.description}}</textarea>
    </label>
    <br>
    <br>
    <label>
        Цена со скидкой:
        <input type="number" name="priceTo" value="{{game.priceTo}}">
    </label>
    <br>
    <br>
    <label>
        Цена без скидки:
        <input type="number" name="priceFrom" value="{{game.priceFrom}}">
    </label>
    <br>
    <br>
    <label>
        Изображение:
        <input type="file" name="img">
    </label>
    <br>
    <br>
    {{#if game.img}}
        <img src="{{websiteAddress}}{{game.img}}" style="max-width: 300px">
    {{/if}}
    <br>
    <br>
    <label>
        Cover изображение:
        <input type="file" name="coverImg">
    </label>
    <br>
    <br>
    {{#if game.coverImg}}
        <img src="{{websiteAddress}}{{game.coverImg}}" style="max-width: 300px">
    {{/if}}
    <br>
    <br>
    <label>
        Cover видео:
        <input type="file" name="coverVideo">
    </label>
    <br>
    <br>
    {{#if game.coverVideo}}
        <video width="300" controls="controls" poster="{{websiteAddress}}{{game.coverImg}}">
            <source src="{{websiteAddress}}{{game.coverVideo}}">
        </video>
    {{/if}}
    <br>
    <br>
    <label>
        Изображения слайдера:
        <input type="file" name="gameImages" multiple>
    </label>
    <br>
    <br>
    {{#if gameImages}}
        <div style="display: flex; flex-wrap: wrap">
            {{#each gameImages}}
                <img src="{{../websiteAddress}}{{name}}" alt="Изображение{{@index}} из игры {{../game.name}}" style="height: 200px; max-width: 300px; margin: 5px; object-fit: cover">
            {{/each}}
        </div>
    {{/if}}
    <br>
    <br>
    <label>
        Ссылка на трейлер в YouTube:
        <input type="text" name="trailerLink"{{#if game.trailerLink}} value="{{game.trailerLink}}"{{/if}}>
    </label>
    <br>
    <br>
    <label>
        Добавить в слайдер на главной странице:
        <input type="checkbox" name="inHomeSlider"{{#if game.inHomeSlider}} checked{{/if}}>
    </label>
    <br>
    <br>
    <label>
        Дата выхода:
        <input type="text" name="releaseDate" value="{{game.releaseDate}}">
    </label>
    <br>
    <br>
    <label>
        ОС:
        <input type="text" name="os" value="{{game.os}}">
    </label>
    <br>
    <br>
    <label>
        Процессор:
        <input type="text" name="cpu" value="{{game.cpu}}">
    </label>
    <br>
    <br>
    <label>
        Видео карта:
        <input type="text" name="graphicsCard" value="{{game.graphicsCard}}">
    </label>
    <br>
    <br>
    <label>
        Оперативная память:
        <input type="text" name="ram" value="{{game.ram}}">
    </label>
    <br>
    <br>
    <label>
        Память на диске:
        <input type="text" name="diskMemory" value="{{game.diskMemory}}">
    </label>
    <br>
    <br>
    <label>
        Категории игры:
        <select name="categories" multiple>
            {{#each categories}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>
                    {{name}}
                </option>
            {{/each}}
        </select>
    </label>
    <br>
    <br>
    <label>
        Жанры игры:
        <select name="genres" multiple>
            {{#each genres}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>
                    {{name}}
                </option>
            {{/each}}
        </select>
    </label>
    <br>
    <br>
    <label>
        Расширения игры:
        <select name="gameExtends" multiple>
            {{#each extends}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>
                    {{name}}
                </option>
            {{/each}}
        </select>
    </label>
    <br>
    <br>
    <label>
        Языки игры:
        <select name="languages" multiple>
            {{#each languages}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>
                    {{name}}
                </option>
            {{/each}}
        </select>
    </label>
    <br>
    <br>
    <label>
        Регионы активации:
        <select name="regions" multiple>
            {{#each regions}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>
                    {{name}}
                </option>
            {{/each}}
        </select>
    </label>
    <br>
    <br>
    <label>
        Разработчики:
        <select name="developers" multiple>
            {{#each developers}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>
                    {{name}}
                </option>
            {{/each}}
        </select>
    </label>
    <br>
    <br>
    <label>
        Издатель:
        <select name="publisher">
            {{#each publishers}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>
                    {{name}}
                </option>
            {{/each}}
        </select>
    </label>
    <br>
    <br>
    <label>
        Сервис активации:
        <select name="activationService">
            {{#each activationServices}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>
                    {{name}}
                </option>
            {{/each}}
        </select>
    </label>
    <br>
    <br>
    <label>
        Платформа:
        <select name="platform">
            {{#each platforms}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>
                    {{name}}
                </option>
            {{/each}}
        </select>
    </label>
    <br>
    <br>
    <label>
        Версия:
        <select name="edition">
            <option value="0">Не выбрано</option>
            {{#each editions}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>
                    {{name}}
                </option>
            {{/each}}
        </select>
    </label>
    <br>
    <br>
    <input type="submit" name="add" value="{{#if isEdit}}Сохранить изменения{{else}}Добавить игру{{/if}}">
</form>