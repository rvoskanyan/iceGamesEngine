<header class="header js-header">
    <div class="mobileQuickSearch js-mobileQuickSearchContainer">
        <div class="searchBar">
            <input class="textField js-mobileSearchString" type="text" placeholder="Поиск...">
            <button class="btn goSearch js-goSearchMobile" title="Выполнить поиск">
                <span class="icon icon-search"></span>
            </button>
        </div>
        <div class="searchResults js-mobileSearchResult">
            <p class="textInfo">Начните вводить название игры</p>
        </div>
    </div>
    <div class="contentContainer">
        {{#if isHome}}
            <div class="logo">
                <div class="imgContainer">
                    <img src="{{websiteAddress}}img/logo.svg" class="img" alt="Логотип ICE GAMES"
                         title="Логотип ICE GAMES">
                    <span class="eye"></span>
                </div>
                <div class="name">ICE GAMES<br>Store</div>
            </div>
        {{else}}
            <a class="logo" href="{{websiteAddress}}" title="Перейти на главную страницу">
                <div class="imgContainer">
                    <img src="{{websiteAddress}}img/logo.svg" class="img" alt="Логотип ICE GAMES"
                         title="Логотип ICE GAMES">
                    <span class="eye"></span>
                </div>
                <div class="name">ICE GAMES<br>Store</div>
            </a>
        {{/if}}
        <div class="navigateMobileContainer js-navigateMobileContainer">
            <div class="navigation js-mainNavigation">
                {{> menu}}
                <button title="Открыть каталог игр"
                        class="btn bg-blur round border hover-bg-pink hover-border-pink openMenu js-toggleMainNavigation">
                    Каталог
                </button>
                <div itemprop="potentialAction" class="searchBar" itemscope itemtype="https://schema.org/SearchAction">
                    <meta itemprop="target" content="https://icegames.store/games?searchString={query}">
                    <meta itemprop="url" content="https://icegames.store">
                    <input itemprop="query-input" name="query" class="textField js-searchString" type="text"{{#if
                            searchString}} value="{{searchString}}"{{/if}} placeholder="Поиск...">
                    <button class="btn goSearch js-goSearch" title="Выполнить поиск">
                        <span class="icon icon-search"></span>
                    </button>
                </div>
                {{#if isRating}}
                    <span title="Рейтинг пользователей ICE GAMES"
                          class="rating bg-blur btn round border hover-bg-pink hover-border-pink">Рейтинг</span>
                {{else}}
                    <a href="{{websiteAddress}}rating" title="Рейтинг пользователей ICE GAMES"
                       class="rating bg-blur btn round border hover-bg-pink hover-border-pink">Рейтинг</a>
                {{/if}}
            </div>
            <div class="profile">
                {{#if isAuth}}
                    {{#if isProfileHome}}
                        <div class="btn">
                            <span class="icon icon-profile"></span>
                        </div>
                    {{else}}
                        <a href="{{websiteAddress}}profile" class="btn" title="Перейти в профиль">
                            <span class="icon icon-profile"></span>
                        </a>
                    {{/if}}
                {{else}}
                    <button class="btn js-openLogin" title="Авторизация">
                        <span class="icon icon-profile"></span>
                    </button>
                {{/if}}
                {{#if isCart}}
                    <div class="btn cart isCart{{#if person.cart.length}} full{{/if}}">
                        <span class="icon icon-cart"></span>
                        <span class="icon icon-fillDiamond"></span>
                    </div>
                {{else}}
                    <a href="{{websiteAddress}}cart" class="btn cart{{#if person.cart.length}} full{{/if}}"
                       title="Перейти в корзину с товарами">
                        <span class="icon icon-cart"></span>
                        <span class="icon icon-fillDiamond"></span>
                    </a>
                {{/if}}
            </div>
        </div>
        <div class="mobileNavBtn">
            <button class="btn js-openMobileQuickSearch">
                <span class="icon icon-search"></span>
            </button>
            <button class="btn burger openMobileMenu js-openMobileMenu"></button>
        </div>
    </div>
</header>
