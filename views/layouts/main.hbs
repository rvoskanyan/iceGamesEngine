    <div class="containerProfileForms js-profileForms js-tabs">
        <div class="formWrapper loginForm js-tabs js-tabsTarget-login" data-tabsname="login">
            <div class="switches">
                <button class="btn round border fillFromCenter fillFromCenter-darkLilac js-tabsBtn-login active" data-target="auth" data-setattribute='[{"name": "action", "value": "/auth", "selectorTarget": "form"}, {"children": true, "value": "Войти", "selectorTarget": "sendLoginForm"}]'>Вход</button>
                <button class="btn round border fillFromCenter fillFromCenter-darkLilac js-tabsBtn-login" data-target="reg" data-setattribute='[{"name": "action", "value": "/reg", "selectorTarget": "form"}, {"children": true, "value": "Зарегистрироваться", "selectorTarget": "sendLoginForm"}]'>Регистрация</button>
            </div>
            <form action="/auth" method="post" class="form js-form">
                <label class="inField js-labelInField js-tabsTarget-reg hide">
                    <input class="js-labelInField-field" type="text" name="nickname">
                    <span class="label">Ник</span>
                </label>
                <label class="inField js-labelInField js-tabsTarget-auth js-tabsTarget-reg">
                    <input class="js-labelInField-field" type="text" name="email">
                    <span class="label">E-mail</span>
                </label>
                <label class="inField js-labelInField js-tabsTarget-auth js-tabsTarget-reg">
                    <input class="js-labelInField-field" type="password" name="password">
                    <span class="label">Пароль</span>
                </label>
                <button type="submit" class="btn round border fillFromCenter fillFromCenter-darkLilac js-sendLoginForm">Войти</button>
                <div class="restore js-tabsTarget-auth">
                    <div class="forgot">Забыли пароль?</div>
                    <button type="button" class="btn js-tabsBtn" data-target="restore" title="Открыть форму восстановления пароля">Восстановить</button>
                </div>
            </form>
        </div>
        <div class="formWrapper restoreForm js-tabsTarget-restore hide">
            <form action="#" method="post" class="form">
                <div class="forgot">
                    <div class="title">Вы забыли пароль?</div>
                    <div class="description">Мы пришлем вам новый на ящик, указанный при регистрации</div>
                </div>
                <label class="inField js-labelInField">
                    <input class="js-labelInField-field" type="text" name="email">
                    <span class="label">E-mail</span>
                </label>
                <button type="submit" class="btn round border fillFromCenter fillFromCenter-darkLilac">Восстановить</button>
                <div class="back">
                    <button type="button" class="btn active js-tabsBtn" data-target="login" title="Вернуться к авторизации">Назад</button>
                </div>
            </form>
