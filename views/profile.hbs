<main class="contentContainer withoutCover profilePage">
    <div class="breadcrumbs contentContainer">
        <div class="item">
            <a class="btn link" href="/">Главная</a>
        </div>
        <div class="current">Профиль</div>
    </div>
    <div class="profile">
        {{> profileMenu}}
        <div class="content">
            <div class="headProfile">
                <div class="info">
                    <div class="name">{{user.login}}</div>
                    <div class="rating">Рейтинг {{user.rating}}</div>
                    <div class="rating">Позиция {{ratingPosition}} \ {{countUsers}}</div>
                </div>
                <div class="prompt js-prompt">
                    <button class="btn js-promptOpen">
                        <span class="icon icon-prompt"></span>
                    </button>
                    <div class="block js-promptBlock">
                        <div class="head">
                            <div class="title">Как работает рейтинг</div>
                            <button class="btn js-promptClose">
                                <span class="icon icon-close"></span>
                            </button>
                        </div>
                        <div class="description">
                            Рейтинг индивидуально присвается каждому пользователю. За активность на сайте даются баллы
                            из которых собирается рейтинг.
                        </div>
                        <div class="listActions">
                            <div class="title">Вот за что можно получить баллы:</div>
                            <ul class="list">
                                <li class="item">Покупка игры - 10 баллов</li>
                                <li class="item">Приглашение друга - 5 баллов</li>
                                <li class="item">Прочтение статьи - 2 балла</li>
                                <li class="item">Получение достижения - 4 балла</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="statistics">
                <div class="items">
                    <div class="item">
                        <div class="value">{{user.purchasedProducts}}</div>
                        <div class="name">Игр куплено</div>
                    </div>
                    <div class="item">
                        <div class="value">{{user.invitedUsers.length}}</div>
                        <div class="name">Друзей приглашено</div>
                    </div>
                    <div class="item">
                        <div class="value">{{user.viewedArticles.length}}</div>
                        <div class="name">Статей прочитано</div>
                    </div>
                    <div class="item">
                        <div class="value">{{countAchievements}}</div>
                        <div class="name">Достижений получено</div>
                    </div>
                    <div class="item">
                        <div class="value">{{user.daysUs}}</div>
                        <div class="name">Дней с<br>ICE GAMES</div>
                    </div>
                </div>
            </div>
            {{#if user.achievements.length}}
                <div class="achievements">
                    <div class="head">
                        <div class="title">Мои достижения</div>
                        <a href="/profile/achievements" class="btn round border small">Смотреть все</a>
                    </div>
                    <div class="list mobileScroll">
                        {{#each user.achievements}}
                            <div class="achievement">
                                <img src="{{@root.websiteAddress}}{{icon}}" alt="Иконка достижения {{name}}" title="Иконка достижения {{name}}" class="achievementIcon">
                                <div class="name">{{name}}</div>
                                <div class="description">{{description}}</div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
    {{> newsSlider
            aricles=articles
    }}
</main>