{{#if isEdit}}
    <a href="/admin/bundles/{{bundle.id}}/addProduct">Добавить игру в данную связку</a>
    <br>
    <br>
{{/if}}
<form method="post" action="/admin/bundles/{{#if isEdit}}edit/{{bundle.id}}{{else}}add{{/if}}">
    <label>
        Название связки:
        <input type="text" name="name"{{#if isEdit}} value="{{bundle.name}}"{{/if}}>
    </label>
    <br>
    <br>
    <input type="submit" name="add" value="{{#if isEdit}}Сохранить изменения{{else}}Добавить{{/if}}">
</form>
{{#if isEdit}}
    <br>
    Игры в связке:
    {{#if products}}
        <ul>
            {{#each products}}
                <li>
                    <a href="/admin/bundles/{{@root.bundle.id}}/{{id}}">
                        {{name}}
                    </a>
                </li>
            {{/each}}
        </ul>
    {{else}}
        Отсутствуют
    {{/if}}
{{/if}}