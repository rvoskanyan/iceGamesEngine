<main class="contentContainer withoutCover profilePage">
    <div class="breadcrumbs contentContainer mobileInvisibleScroll">
        <div class="item">
            <a class="btn link" href="{{websiteAddress}}">Главная</a>
        </div>
        <div class="item">
            <a class="btn link" href="{{websiteAddress}}profile">Профиль</a>
        </div>
        <div class="current">Достижения</div>
    </div>
    <div class="profile">
        {{> profileMenu}}
        <div class="content">
            <div class="progressBar{{#iff @root.percent '===' 0}} zero{{else}}{{#iff @root.percent '<' 100}} start{{/iff}}{{/iff}}">
                <div class="progressWrapper">
                    <div class="progressScale" style="width: {{@root.percent}}%"></div>
                </div>
                <div class="value">{{achievements.length}} \ {{achievementCount}}</div>
            </div>
            <div class="achievementsList">
                <div class="title">Достижения</div>
                <div class="list">
                    {{#each achievements}}
                        <div class="achievement">
                            <img src="{{@root.websiteAddress}}{{icon}}" alt="Иконка достижения {{name}}" title="Иконка достижения {{name}}" class="achievementIcon">
                            <div class="name">{{name}}</div>
                            <div class="description">{{description}}</div>
                        </div>
                    {{/each}}
                    {{#each restAchievements}}
                        <div class="achievement">
                            <img src="{{@root.websiteAddress}}{{icon}}" alt="Иконка достижения {{name}}" title="Иконка достижения {{name}}" class="achievementIcon">
                            <div class="name">{{name}}</div>
                            <div class="description">{{description}}</div>
                            <div class="lock" title="Достижение еще не получено">
                                <span class="icon icon-lock"></span>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</main>