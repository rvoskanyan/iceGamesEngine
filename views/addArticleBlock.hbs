<form method="post" action="/admin/articles/{{articleId}}/{{#if isEdit}}{{block._id}}{{else}}addBlock{{/if}}" enctype="multipart/form-data">
    <label>
        *Текст:
        <textarea name="text" cols="30" rows="10">{{block.text}}</textarea>
    </label>
    <br>
    <br>
    <label>
        Картинка:
        <input type="file" name="img">
        {{#if block.img}}
            <br>
            <br>
            <img src="{{websiteAddress}}{{block.img}}" style="max-width: 250px">
        {{/if}}
    </label>
    <br>
    <br>
    <label>
        Позиция картинки:
        <select name="imgPosition">
            <option value="top" {{#iff block.imgPosition '===' 'top'}}selected{{/iff}}>Вверху</option>
            <option value="left" {{#iff block.imgPosition '===' 'left'}}selected{{/iff}}>Слева</option>
            <option value="right" {{#iff block.imgPosition '===' 'right'}}selected{{/iff}}>Справа</option>
        </select>
    </label>
    <br>
    <br>
    <input type="submit" value="{{#if isEdit}}Сохранить изменения{{else}}Добавить{{/if}}">
</form>