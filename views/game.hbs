                {{game.name}}
                <span class="rate">
                    <span class="name">Ice Games</span>
                    <span class="value">4.5</span>
                </span>
                <span class="rate">
                    <span class="name">Metacritic</span>
                    <span class="value">83</span>
                </span>
            </div>
            <div class="statuses">
                {{#if inStock}}
                    <div class="item positive">В наличии</div>
                {{else}}
                    <div class="item negative">Нет в наличии</div>
                {{/if}}
                <div class="item positive">Данный товар купили сегодня 30 раз</div>
            </div>
            <div class="description">{{game.description}}</div>
            <div class="bottomContainer">
                <div class="price">
                    <div class="toPrice">
                        <span class="value">{{game.price}}</span>
                    </div>
                    <div class="fromPrice">
