        <!--<video class="video" autoplay muted loop>
            <source type="video/mp4" src="https://icegames.store/wp-content/uploads/2021/07/cut.mp4">
        </video>-->
        <img class="img" src="/{{game.coverImg}}" alt="Phoenix Point: Year One Edition" title="Phoenix Point: Year One Edition">
        <div class="offer">
            {{#if hasKits}}
                <div class="variations">
                    <div class="item">
                        {{#if mainGameId}}
                            <a href='/games/{{mainGameId}}' class="btn rounded translucent bg-darkBlue">Standard</a>
                        {{else}}
                            <div class="btn rounded translucent bg-darkBlue active">Standard</div>
                        {{/if}}
                    </div>
                    {{#each kits}}
                        <div class="item">
                            {{#if isCurrent}}
                                <div class="btn rounded translucent bg-darkBlue active">{{nameKit}}</div>
                            {{else}}
                                <a href='/games/{{kit.ProductId}}' class="btn rounded translucent bg-darkBlue">{{nameKit}}</a>
                                <div class="elems">
                                    {{#each elements}}
                                        <div class="item">{{this}}</div>
                                    {{/each}}
                                </div>
                            {{/if}}
                        </div>
                    {{/each}}
                </div>
            {{/if}}
