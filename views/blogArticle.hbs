        {{#if article.products.length}}
            <div class="gamesBlock">
                <div class="title">Игры из статьи</div>
                {{#iff article.products.length '>' 7}}
                    <div class="productsFromArticleSlider js-productsFromArticleSlider">
                        <button class="btn prev js-prevBtn"></button>
                        <div class="visibleArea js-visibleArea">
                            <div class="tape js-tape">
                                {{#each article.products}}
                                    <div class="slide js-slide">
                                        {{> game
                                                _id=_id
                                                name=name
                                                alias=alias
                                                img=img
                                                priceTo=priceTo
                                                priceFrom=priceFrom
                                                dsId=dsId
                                                dlc=dlc
                                                inStock=inStock
                                                preOrder=preOrder
                                        }}
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                        <button class="btn next js-nextBtn"></button>
                    </div>
                {{else}}
                    <div class="games mobileScroll">
                        {{#each article.products}}
                            {{> game
                                    _id=_id
                                    name=name
                                    alias=alias
                                    img=img
                                    priceTo=priceTo
                                    priceFrom=priceFrom
                                    dsId=dsId
                                    dlc=dlc
                                    inStock=inStock
                                    preOrder=preOrder
                            }}
                        {{/each}}
                    </div>
                {{/iff}}
            </div>
        {{/if}}
